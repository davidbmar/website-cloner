{
  "name": "website-cloner",
  "version": "1.0.0",
  "description": "A two-phase website cloning tool: enumerate URLs, then download and deploy to S3",
  "main": "clone-website.js",
  "type": "module",
  "scripts": {
    "start": "node clone-website.js",
    "enumerate": "node clone-website.js --enumerate-only",
    "download": "node clone-website.js --download-only",
    "full": "node clone-website.js --full"
  },
  "keywords": [
    "website",
    "cloner",
    "scraper",
    "s3",
    "static-site"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "p-queue": "^8.0.0",
    "robots-parser": "^3.0.0",
    "mime-types": "^2.1.35",
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.0",
    "dotenv": "^16.3.0"
  }
}
